<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whatsappandroid.viniciusnunes.joiceapp.CadastrarUsuarioActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="70dp"
        android:text="Nome"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTelefone"
        android:layout_alignBottom="@+id/editTelefone"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:text="Telefone*"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCadastar"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:text="Senha*"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tipoLoginC"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginBottom="10dp"
        android:text="Tipo de login*"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/editTelefone"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/editNome"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editNome"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/editTelefone"
        android:layout_alignStart="@+id/editTelefone"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editSenhaC"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTelefone"
        android:layout_alignStart="@+id/editTelefone"
        android:layout_below="@+id/editTelefone"
        android:ems="10"
        android:inputType="textPassword" />

    <Spinner
        android:id="@+id/tipoLoginC"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btnVoltar"
        android:layout_alignLeft="@+id/editSenhaC"
        android:layout_alignStart="@+id/editSenhaC"
        android:layout_marginBottom="11dp" />

    <Button
        android:id="@+id/btnCadastar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editSenhaC"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="75dp"
        android:layout_toEndOf="@+id/btnVoltar"
        android:layout_toRightOf="@+id/btnVoltar"
        android:text="Cadastrar" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCadastar"
        android:layout_alignBottom="@+id/btnCadastar"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="Voltar" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editNome"
        android:layout_marginBottom="13dp"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:text="Campos para login *"
        android:textColor="@android:color/black" />
</RelativeLayout>
